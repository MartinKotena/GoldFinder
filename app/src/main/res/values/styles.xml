<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toastOK">
        <item name="colorBackground">#94ffab</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_wifion</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="toastNotOk">
        <item name="colorBackground">#c00000</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_wifioff</item>
